<tr class="hover:bg-gray-100">
    <td class="px-5 py-4 border-b border-gray-200 bg-white text-sm">
        <p class="text-gray-900 whitespace-no-wrap"><%= user.username %></p>
    </td>
    <td class="px-5 py-4 border-b border-gray-200 bg-white text-sm">
        <p class="text-gray-900 whitespace-no-wrap"><%= user.name %></p>
    </td>
    <td class="px-5 py-4 border-b border-gray-200 bg-white text-sm">
        <% if(user.admin) { %>
            <span class="relative inline-block px-3 py-1 font-semibold text-green-900 leading-tight">
                <span aria-hidden class="absolute inset-0 bg-green-200 opacity-50 rounded-full"></span>
                <span class="relative">Admin</span>
            </span>
        <% } else { %>
            <span class="relative inline-block px-3 py-1 font-semibold text-gray-700 leading-tight">
                <span aria-hidden class="absolute inset-0 bg-gray-200 opacity-50 rounded-full"></span>
                <span class="relative">User</span>
            </span>
        <% } %>
    </td>
    <td class="px-5 py-4 border-b border-gray-200 bg-white text-sm space-x-2">
        <% if(user.username !== session.username) { // Prevent admin from demoting/promoting themselves %>
            <% if(user.admin) { %>
                <a href="/admin/demote/<%= user.username %>" class="text-red-600 hover:text-red-900 font-semibold px-2 py-1 rounded-md bg-red-100 hover:bg-red-200 transition duration-150 ease-in-out">Demote</a>
            <% } else { %>
                <a href="/admin/promote/<%= user.username %>" class="text-green-600 hover:text-green-900 font-semibold px-2 py-1 rounded-md bg-green-100 hover:bg-green-200 transition duration-150 ease-in-out">Promote</a>
            <% } %>
        <% } else { %>
            <span class="text-xs text-gray-500 italic">(Current User)</span>
        <% } %>
    </td>
</tr>